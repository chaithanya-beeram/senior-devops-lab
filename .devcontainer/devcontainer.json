{
    "name": "Chaybeeram's DevOps Lab",
    // The 'universal' image is the 'Golden Image' for Codespaces
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "features": {
        // We'll leave features empty because 'universal' has everything we need
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-kubernetes-tools.vscode-kubernetes-tools",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    // This command will run every time the container is built
    "postCreateCommand": "curl -Lo ./kind https://kind.sigs.k8s.io/dl/v0.20.0/kind-linux-amd64 && chmod +x ./kind && sudo mv ./kind /usr/local/bin/kind"
}